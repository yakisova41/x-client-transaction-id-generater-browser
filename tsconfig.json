{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
